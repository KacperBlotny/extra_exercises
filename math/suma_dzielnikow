#include<iostream>

using namespace std;

int suma_dzielnikow(int n);

int main()
{
    //SUMA DZIELNIKÃ“W

   int x;

   cout << "Podaj liczbe ktorej dzielniki maja byc zsumowane: ";
   cin >> x;

   cout <<endl << "Suma dzielnikow " << x << ": " << suma_dzielnikow(x);

	return 0;
}


int suma_dzielnikow(int n)
{
    int suma=0;

    cout << "Dzielniki: ";

    for(int i=1; i<=n; i++)
    {
        if(n%i==0) suma = suma + i;
        if(n%i==0) cout << i << " ";
    }
    return suma;
}
